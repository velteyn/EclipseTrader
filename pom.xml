<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.eclipsetrader</groupId>
    <artifactId>eclipsetrader-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <tycho.version>4.0.8</tycho.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <eclipse-repo.url>https://download.eclipse.org/releases/oxygen</eclipse-repo.url>
    </properties>

    <modules>
        <module>com.sun.syndication</module>
        <module>org.hibernate</module>
        <module>org.eclipsetrader.repository.hibernate</module>
        <module>com.tictactec.ta.lib</module>
        <module>org.eclipsetrader.core</module>
        <module>org.eclipse.nebula.widgets.pshelf</module>
        <module>org.eclipsetrader.repository.hibernate.derby</module>
        <module>com.sun.syndication.fetcher</module>
        <module>org.eclipse.nebula.widgets.cdatetime</module>
        <module>org.eclipsetrader.repository.local</module>
        <module>org.eclipsetrader.platform</module>
        <module>org.eclipsetrader.ui.charts.indicators</module>
        <module>org.eclipsetrader.ui.application</module>
    </modules>

    <repositories>
        <repository>
            <id>eclipse-oxygen</id>
            <url>${eclipse-repo.url}</url>
            <layout>p2</layout>
        </repository>
        <repository>
            <id>dai-labor-open</id>
            <url>https://repositories.dai-labor.de/extern/content/repositories/dai-open/</url>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-maven-plugin</artifactId>
                <version>${tycho.version}</version>
                <extensions>true</extensions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.eclipse.tycho</groupId>
                    <artifactId>tycho-compiler-plugin</artifactId>
                    <version>${tycho.version}</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.tycho</groupId>
                    <artifactId>tycho-surefire-plugin</artifactId>
                    <version>${tycho.version}</version>
                    <configuration>
                        <skipTests>true</skipTests>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
