<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.eclipsetrader</groupId>
    <artifactId>org.eclipsetrader.parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>21</java.version>
        <tycho.version>5.0.0</tycho.version>
        <eclipse.platform.release>2024-03</eclipse.platform.release>
    </properties>

    <modules>
        <module>com.sun.syndication</module>
        <module>com.sun.syndication-feature</module>
        <module>com.sun.syndication.fetcher</module>
        <module>com.tictactec.ta.lib</module>
        <module>com.tictactec.ta.lib-feature</module>
        <module>javax.xml.bind</module>
        <module>org.apache.commons</module>
        <module>org.apache.commons-feature</module>
        <module>org.apache.commons.codec</module>
        <module>org.apache.commons.httpclient</module>
        <module>org.apache.commons.logging</module>
        <module>org.apache.log4j</module>
        <module>org.apache.log4j-feature</module>
        <module>org.eclipse.nebula.jface.cdatetime</module>
        <module>org.eclipse.nebula.widgets.cdatetime</module>
        <module>org.eclipse.nebula.widgets.pshelf</module>
        <module>org.eclipsetrader.archipelago</module>
        <module>org.eclipsetrader.borsaitalia</module>
        <module>org.eclipsetrader.brokers.paper</module>
        <module>org.eclipsetrader.brokers.paper-feature</module>
        <module>org.eclipsetrader.brokers.paper.tests</module>
        <module>org.eclipsetrader.core</module>
        <module>org.eclipsetrader.core.tests</module>
        <module>org.eclipsetrader.directa</module>
        <module>org.eclipsetrader.directa-feature</module>
        <module>org.eclipsetrader.directa.tests</module>
        <module>org.eclipsetrader.directaworld</module>
        <module>org.eclipsetrader.directaworld-feature</module>
        <module>org.eclipsetrader.jessx</module>
        <module>org.eclipsetrader.news</module>
        <module>org.eclipsetrader.news.tests</module>
        <module>org.eclipsetrader.platform</module>
        <module>org.eclipsetrader.platform-feature</module>
        <module>org.eclipsetrader.platform.doc.isv</module>
        <module>org.eclipsetrader.platform.doc.user</module>
        <module>org.eclipsetrader.repository.hibernate</module>
        <module>org.eclipsetrader.repository.hibernate-feature</module>
        <module>org.eclipsetrader.repository.hibernate.derby</module>
        <module>org.eclipsetrader.repository.hibernate.derby-feature</module>
        <module>org.eclipsetrader.repository.hibernate.postgresql</module>
        <module>org.eclipsetrader.repository.hibernate.postgresql-feature</module>
        <module>org.eclipsetrader.repository.hibernate.tests</module>
        <module>org.eclipsetrader.repository.local</module>
        <module>org.eclipsetrader.repository.local.tests</module>
        <module>org.eclipsetrader.tests</module>
        <module>org.eclipsetrader.tests-feature</module>
        <module>org.eclipsetrader.ui</module>
        <module>org.eclipsetrader.ui.application</module>
        <module>org.eclipsetrader.ui.charts.indicators</module>
        <module>org.eclipsetrader.ui.tests</module>
        <module>org.eclipsetrader.yahoo</module>
        <module>org.eclipsetrader.yahoo-feature</module>
        <module>org.eclipsetrader.yahoo.tests</module>
        <module>org.hibernate</module>
        <module>org.hibernate-feature</module>
        <module>org.htmlparser</module>
        <module>org.htmlparser-feature</module>
        <module>org.jdom</module>
        <module>org.jdom-feature</module>
        <module>org.mozilla.rhino</module>
        <module>org.mozilla.rhino-feature</module>
    </modules>

    <repositories>
        <repository>
            <id>eclipse-platform</id>
            <layout>p2</layout>
            <url>https://download.eclipse.org/releases/${eclipse.platform.release}</url>
        </repository>
        <repository>
            <id>nebula</id>
            <layout>p2</layout>
            <url>https://download.eclipse.org/nebula/releases/3.1.1</url>
        </repository>
    </repositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.eclipse.tycho</groupId>
                    <artifactId>tycho-maven-plugin</artifactId>
                    <version>${tycho.version}</version>
                    <extensions>true</extensions>
                </plugin>
                <plugin>
                    <groupId>org.eclipse.tycho</groupId>
                    <artifactId>target-platform-configuration</artifactId>
                    <version>${tycho.version}</version>
                    <configuration>
                        <target>
                            <locations>
                                <location>
                                    <repository>
                                        <url>https://download.eclipse.org/releases/${eclipse.platform.release}</url>
                                    </repository>
                                    <unit>
                                        <id>org.eclipse.rcp.feature.group</id>
                                    </unit>
                                    <unit>
                                        <id>org.eclipse.help.feature.group</id>
                                    </unit>
                                    <unit>
                                        <id>org.eclipse.core.databinding.beans</id>
                                    </unit>
                                </location>
                            </locations>
                        </target>
                        <execution-environment>JavaSE-${java.version}</execution-environment>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>${java.version}</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>target-platform-configuration</artifactId>
                <version>${tycho.version}</version>
            </plugin>
        </plugins>
    </build>
</project>
