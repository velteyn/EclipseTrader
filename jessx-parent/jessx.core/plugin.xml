<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <!-- Definizione del comando -->
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.jessx.core.helloCommand"
            name="Say Hello JessX">
      </command>
   </extension>

   <!-- Handler che implementa il comando -->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.jessx.core.handlers.HelloHandler"
            commandId="com.jessx.core.helloCommand">
      </handler>
   </extension>

   <!-- Inserimento nel menu Help -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:help?after=additions">
         <command
               commandId="com.jessx.core.helloCommand"
               label="Hello JessX"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
